                                        <DataTemplate>
                                            <Grid Margin="5" Height="200">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="3*"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>
                                                <Image Grid.Row="0" Source="{Binding picUrl}" Stretch="UniformToFill"/>
                                                <Border Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Bottom" Background="Black" Opacity="0.8" Margin="0,0,5,5" Visibility="{Binding tag, Converter={StaticResource visibleConverter}}">
                                                    <TextBlock  Text="{Binding tag}" FontSize="25"  TextWrapping="Wrap" Margin="2"/>
                                                </Border>
                                                <TextBlock Text="{Binding name}" Grid.Row="1" TextWrapping="Wrap" />
                                                <TextBlock Text="{Binding desc}" FontSize="15"  Grid.Row="2" Foreground="Gray" TextWrapping="Wrap"/>
                                            </Grid>
                                        </DataTemplate>
                                    </local:ChannelVideoTemplateSelector.LandscapeImage>
                                    <local:ChannelVideoTemplateSelector.NorLandscapeImage>
                                        <DataTemplate>
                                            <Grid Height="230">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <Grid Grid.Column="0" Margin="5" Tap="NorVideoTap" Tag="0">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="3*"/>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>
                                                    <Image Grid.Row="0" Source="{Binding picUrl}" Stretch="UniformToFill"/>
                                                    <Border Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Bottom" Background="Black" Opacity="0.8" Margin="0,0,5,5" Visibility="{Binding tag, Converter={StaticResource visibleConverter}}">
                                                        <TextBlock  Text="{Binding tag}" FontSize="25"  TextWrapping="Wrap" Margin="2"/>
                                                    </Border>
                                                    <TextBlock Text="{Binding name}" Grid.Row="1" TextWrapping="Wrap" />
                                                    <TextBlock Text="{Binding desc}" FontSize="15"  Grid.Row="2" Foreground="Gray" TextWrapping="Wrap"/>
                                                </Grid>
                                                <Grid Grid.Column="1" Margin="5" Tap="NorVideoTap" Tag="1">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="3*"/>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>
                                                    <Image Grid.Row="0" Source="{Binding picUrl1}" Stretch="UniformToFill"/>
                                                    <Border Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Bottom" Background="Black" Opacity="0.8" Margin="0,0,5,5" Visibility="{Binding tag1, Converter={StaticResource visibleConverter}}">
                                                        <TextBlock  Text="{Binding tag1}" FontSize="25"  TextWrapping="Wrap" Margin="2"/>
                                                    </Border>
                                                    <TextBlock Text="{Binding name1}" Grid.Row="1" TextWrapping="Wrap" />
                                                    <TextBlock Text="{Binding desc1}" FontSize="15"  Grid.Row="2" Foreground="Gray" TextWrapping="Wrap"/>
                                                </Grid>
                                            </Grid>
                                        </DataTemplate>
                                    </local:ChannelVideoTemplateSelector.NorLandscapeImage>
                                    <local:ChannelVideoTemplateSelector.LiveImage>
                                        <DataTemplate>
                                            <Grid Margin="5" Height="200" Width="210">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="3*"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>
                                                <Image Grid.Row="0" Source="{Binding picUrl}" Stretch="UniformToFill"/>
                                                <Border Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Bottom" Background="Black" Opacity="0.8" Margin="0,0,5,5" Visibility="{Binding tag, Converter={StaticResource visibleConverter}}">
                                                    <TextBlock  Text="{Binding tag}" FontSize="25"  TextWrapping="Wrap" Margin="2"/>
                                                </Border>
                                                <TextBlock Text="{Binding name}" Grid.Row="1" TextWrapping="Wrap" />
                                                <TextBlock Text="{Binding desc}" FontSize="15"  Grid.Row="2" Foreground="Gray" TextWrapping="Wrap"/>
                                            </Grid>
                                        </DataTemplate>
                                    </local:ChannelVideoTemplateSelector.LiveImage>
                                    <local:ChannelVideoTemplateSelector.RankTemplate>
                                        <DataTemplate>
                                            <Grid Margin="10">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <Image Grid.Column="0" Source="{Binding picUrl}" Stretch="UniformToFill" ></Image>
                                                <Border Background="Black" Opacity="0.8" Grid.Column="0" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,5,5">
                                                    <TextBlock Text="{Binding tag}"  FontSize="20"  TextWrapping="Wrap" Margin="2"></TextBlock>
                                                </Border>
                                                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="10,0">
                                                    <TextBlock Text="{Binding rank}" Foreground="#FFF66E2B" FontSize="25" TextWrapping="Wrap" ></TextBlock>
                                                    <TextBlock Text="{Binding name}" TextWrapping="Wrap" FontSize="25" ></TextBlock>
                                                    <TextBlock Text="{Binding desc}" FontSize="20"  TextWrapping="Wrap"></TextBlock>
                                                    <TextBlock Text="{Binding hotDegree}" FontSize="15"  Foreground="Gray" TextWrapping="Wrap"></TextBlock>
                                                </StackPanel>
                                            </Grid>
                                        </DataTemplate>
                                    </local:ChannelVideoTemplateSelector.RankTemplate>
                                    <local:ChannelVideoTemplateSelector.AvatorImage>
                                        <DataTemplate>
                                            <Grid Margin="5" Height="90" Width="90">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="3*"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>
                                                <Image Grid.Row="0" Source="{Binding picUrl}" Stretch="UniformToFill"/>
                                                <Border Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Bottom" Background="Black" Opacity="0.8" Margin="0,0,5,5" Visibility="{Binding tag, Converter={StaticResource visibleConverter}}">
                                                    <TextBlock  Text="{Binding tag}" FontSize="25"  TextWrapping="Wrap" Margin="2"/>
                                                </Border>
                                                <TextBlock Text="{Binding name}" Grid.Row="1" TextWrapping="Wrap" />
                                                <TextBlock Text="{Binding desc}" FontSize="15"  Grid.Row="2" Foreground="Gray" TextWrapping="Wrap"/>
                                            </Grid>
                                        </DataTemplate>
                                    </local:ChannelVideoTemplateSelector.AvatorImage>
                                </local:ChannelVideoTemplateSelector>
                            </DataTemplate>
                        </phone:LongListSelector.ItemTemplate>

                    </phone:LongListSelector>
                </Grid>
            </phone:PivotItem>
            <phone:PivotItem Margin="0,10,0,0">
                <phone:PivotItem.Header>
                    <TextBlock Text="所有频道" Width="150"  FontSize="35"></TextBlock>
                </phone:PivotItem.Header>
                <ListBox x:Name="AllChannels" ItemsSource="{Binding AllChannels}" Margin="0,10,0,-10" SelectionChanged="AllChannels_SelectionChanged">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <tool:WrapPanel Orientation="Horizontal"></tool:WrapPanel>
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="10,0,0,0">
                                <Grid Margin="5" Width="130" Height="150" CB:TiltEffect.IsTiltEnabled="true">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="4*"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <Image Source="{Binding iconUrl}" Width="100" Height="100" HorizontalAlignment="Center" VerticalAlignment="Center"></Image>
                                    <TextBlock Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding channelName}"/>
                                </Grid>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </phone:PivotItem>
            <phone:PivotItem Margin="0,10,0,0">
                <phone:PivotItem.Header>
                    <TextBlock Text="个人中心" Width="150"  FontSize="35"></TextBlock>
                </phone:PivotItem.Header>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="播放记录          >>" Foreground="Gray" FontSize="30" Margin="20,10" Tap="AllVideosRemember" Grid.Row="0"></TextBlock>
                    <ListBox SelectionChanged="VideoRemember_Changed" ItemsSource="{Binding LastVideoRemember}" x:Name="VideoRemember" Grid.Row="1">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <tool:WrapPanel Orientation="Horizontal"></tool:WrapPanel>
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel  Margin="10" HorizontalAlignment="Center" CB:TiltEffect.IsTiltEnabled="true"  Width="200">
                                    <TextBlock Grid.Row="0" FontSize="15" TextWrapping="Wrap" Text="{Binding Name}" HorizontalAlignment="Center" Foreground="Gray"/>
                                    <Image Source="{Binding LocalImage,Converter={StaticResource BitmapImageConverter}}" Width="150" Height="120" VerticalAlignment="Center" HorizontalAlignment="Center" Stretch="UniformToFill"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <Grid Grid.Row="2" CB:TiltEffect.IsTiltEnabled="true" HorizontalAlignment="Center" CacheMode="BitmapCache" Margin="0,30,0,0">
                        <tool:WrapPanel>
                            <coding4fun:Tile Margin="5" Background="#FFEE7C28" Command="{Binding AppSettingCommand}" Height="90" Width="100"  CommandParameter="1" Title="离线缓存">
                                <Image Width="50" Height="50" Source="/Images/showdown.png" Stretch="Fill" Margin="0,0,0,35" />
                            </coding4fun:Tile>
                            <coding4fun:Tile Margin="5" Background="#FFEE7C28" Command="{Binding AppSettingCommand}" Height="90" Width="100"  CommandParameter="2" Title="   设置">
                                <Image Width="50" Height="50" Source="/Images/setting.png" Stretch="Fill" Margin="0,0,0,35" />
                            </coding4fun:Tile>
                            <coding4fun:Tile Margin="5" Background="#FFEE7C28" Command="{Binding AppSettingCommand}" Height="90" Width="100"  CommandParameter="3" Title="打分/反馈">
                                <Image Width="50" Height="50" Source="/Images/gread.png" Stretch="Fill" Margin="0,0,0,35" />
                            </coding4fun:Tile>
                            <!--<coding4fun:Tile Margin="5" Background="#FFEE7C28" Command="{Binding AppSettingCommand}" Height="90" Width="100"  CommandParameter="4" Title="意见反馈">
                                <Image Width="50" Height="50" Source="/Images/comment.png" Stretch="Fill" Margin="0,0,0,35" />
                            </coding4fun:Tile>-->
                            <coding4fun:Tile Margin="5" Background="#FFEE7C28" Command="{Binding AppSettingCommand}" Height="90" Width="100"  CommandParameter="5" Title="推荐应用">
                                <Image Width="50" Height="50" Source="/Images/tuijian.png" Stretch="Fill" Margin="0,0,0,35" />
                            </coding4fun:Tile>
                            <coding4fun:Tile Margin="5" Background="#FFEE7C28" Command="{Binding AppSettingCommand}" Height="90" Width="100"  CommandParameter="6" Title="关于应用">
                                <Image Width="50" Height="50" Source="/Images/about.png" Stretch="Fill" Margin="0,0,0,35" />
                            </coding4fun:Tile>
                        </tool:WrapPanel>
                    </Grid>
                </Grid>
            </phone:PivotItem>
        </phone:Pivot>
    </Grid>
    <phone:PhoneApplicationPage.ApplicationBar>
        <shell:ApplicationBar IsVisible="True" IsMenuEnabled="True">
            <shell:ApplicationBarIconButton IconUri="/Images/Icons/search.png" Text="搜索" Click="Search_Click"/>
        </shell:ApplicationBar>
    </phone:PhoneApplicationPage.ApplicationBar>
</phone:PhoneApplicationPage>