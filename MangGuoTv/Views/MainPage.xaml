                                        </Grid>
                                    </DataTemplate>
                                </local:ChannelVideoTemplateSelector.AvatorImage>
                            </local:ChannelVideoTemplateSelector>
                        </DataTemplate>
                    </phone:LongListSelector.ItemTemplate>
                    
                </phone:LongListSelector>
