<Grid
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
     xmlns:coding4fun="clr-namespace:Coding4Fun.Phone.Controls;assembly=Coding4Fun.Phone.Controls"
    xmlns:coding4funBinding="clr-namespace:Coding4Fun.Phone.Controls.Binding;assembly=Coding4Fun.Phone.Controls"
    Height="200">
    <Grid.RowDefinitions>
        <RowDefinition Height="3*"/>
        <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
    <Image Grid.Row="0" Source="{Binding picUrl}" Stretch="UniformToFill" CacheMode="BitmapCache"></Image>
    <TextBlock Grid.Row="0" Text="{Binding tag}" HorizontalAlignment="Right" VerticalAlignment="Bottom" FontSize="25" Margin="0,0,10,0" TextWrapping="Wrap"></TextBlock>
    <TextBlock Text="{Binding name}" Grid.Row="1"></TextBlock>   
</Grid>