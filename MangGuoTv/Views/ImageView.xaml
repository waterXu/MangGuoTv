<Grid
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="200">
    <Grid.RowDefinitions>
        <RowDefinition Height="3*"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
    <Image Grid.Row="0" Source="{Binding picUrl}" Stretch="UniformToFill" CacheMode="BitmapCache"></Image>
    <Border Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Bottom" Background="Black" Opacity="0.8" Margin="0,0,5,5">
        <TextBlock  Text="{Binding tag}" FontSize="25"  TextWrapping="Wrap" Margin="2"></TextBlock>
    </Border>
    <TextBlock Text="{Binding name}" Grid.Row="1" TextWrapping="Wrap" ></TextBlock>
    <TextBlock Text="{Binding desc}" FontSize="15"  Grid.Row="2" Foreground="Gray" TextWrapping="Wrap"></TextBlock>
</Grid>